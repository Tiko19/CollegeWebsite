@model IEnumerable<CollegeWebsite.Models.ResultModel>

@{
    ViewBag.Title = "Student Results";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Results</h2>

<p>
    @Html.ActionLink("Create New", "ResultCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradePoint)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GradePoint)
        </td>
        <td>
            @Html.ActionLink("Edit", "ResultEdit", new { id=item.Id }) |
            @Html.ActionLink("Details", "ResultDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "ResultDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>

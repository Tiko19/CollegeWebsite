<!DOC<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - International Institute of Education</title>
    <link href="~/Content/MyStyle.css" type="text/css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Teacher", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Programs<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Bachelor Programs", "BachelorList", "Teacher")</li>
                            <li>@Html.ActionLink("Master Programs", "MasterList", "Teacher")</li>
                            <li>@Html.ActionLink("Non-Degree Programs", "NonDegreeList", "Teacher")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">Students<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Students", "StudentList", "Teacher")</li>
                            <li>@Html.ActionLink("Student Results", "ResultList", "Teacher")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Office and Faculty", "FacultyList", "Teacher")</li>
                    <li>@Html.ActionLink("Dates and Deadlines", "DatesDeadlinesList", "Teacher")</li>
                    <li>@Html.ActionLink("Notices", "NoticeList", "Teacher")</li>
                    <li>@Html.ActionLink("Accomodation", "AccomodationList", "Teacher")</li>
                    <li>@Html.ActionLink("Student Associations", "StudentAssociations", "Teacher")</li>
                    <li>@Html.ActionLink("Users", "UserList", "Teacher")</li>
                    <li>@Html.ActionLink("Log out", "Logout", "Teacher")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - International Institute of Education</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
